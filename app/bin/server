#!/usr/bin/env bash

set -o errexit
set -o pipefail
set -o nounset
set -o xtrace

OUT_DIR=./build/dev
CACHE_DIR="${OUT_DIR}.cache"

rm -rf "${OUT_DIR}"
mkdir -p "${OUT_DIR}"

echo "--- Starting server ..."

./node_modules/.bin/parcel serve ./src/index.pug \
	--out-dir "${OUT_DIR}" \
	--cache-dir "${CACHE_DIR}" \
	--port 1234 \
	--hmr-port 4321 \
	--log-level 4
