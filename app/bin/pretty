#!/usr/bin/env bash

set -o errexit
set -o pipefail
set -o nounset
# set -o xtrace

echo "--- Prettifying source code ..."

./node_modules/.bin/prettier \
	--write \
	--print-width 78 \
	--use-tabs \
	--single-quote \
	--trailing-comma es5 \
	"./src/**/*.js" \
	"./src/**/*.ts" \
	"./src/**/*.vue" \
	"./src/**/*.scss"

echo "--- Finished prettifying source code."
